{
    "board": "ruff-mbd-v1",
    "devices": [
        {
            "id": "relay",
            "model": "RELAY-1C",
            "driver": "relay-1c",
            "inputs": {
                "gpio": {
                    "type": "gpio",
                    "args": {
                        "direction": "out_low"
                    }
                }
            }
        },
        {
            "id": "sound-sensor",
            "model": "SOUND-01",
            "driver": "sound-01",
            "args": {
                "interval": 1000
            },
            "inputs": {
                "gpio": {
                    "type": "gpio",
                    "args": {
                        "direction": "in",
                        "edge": "falling"
                    }
                }
            }
        }
    ]
}